import requests

def download_swagger_json(swagger_hub_url, output_file):
    try:
        parts = swagger_hub_url.split('/')
        user = parts[4]
        api = parts[5]
        version = parts[6]
        
        resolved_json_url = f"https://api.swaggerhub.com/apis/{user}/{api}/{version}?resolved=true"
        
        response = requests.get(resolved_json_url, headers={'Accept': 'application/json'})

        if response.status_code == 200:
            with open(output_file, 'w') as file:
                file.write(response.text)
            print(f"Swagger JSON downloaded: {output_file}")
        else:
            print(f"Unable to download: {response.status_code}")
    
    except Exception as e:
        print(f"An error occurred: {e}")

# Example usage
swagger_hub_url = 'https://app.swaggerhub.com/apis/RIANDARMAWAN785/E-Commerce_API/1.0.0'
output_file = 'swagger.json'
download_swagger_json(swagger_hub_url, output_file)
